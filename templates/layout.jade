doctype html
block vars
  - var bodyclass = null
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet', href='/css/main.css')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description)
  body(class=bodyclass)
    div.wrap
      header.header.c
        div.content-wrap
          block header
          block related_header
            header.related.related-header.c
              if bodyclass != "home"
                a(href=contents.index.url).related-link.related-centre-link
                  span.finger.finger-left ☚
                  | Return to blog
          block page_title
            header.page-title
              h1
                a(href=locals.url)= locals.name
              p.description= locals.description
      main#content.content
        div.content-wrap
          block content
            h2 Greetings, earthlings!
      footer.footer
        div.content-wrap
          block footer
          block related_footer
            div.related.related-footer.c
              ul.related-list
                li.related-item
                  if nextPage
                    a(href=nextPage.url).related-link.related-left-link
                      span.link-inner
                        span.finger.finger-left ☚
                        | Older entries
                li.related-item
                  if bodyclass == "archive"
                    a(href=contents.index.url).related-link.related-left-link
                      span.finger.finger-right.finger-right-inward ☛
                      | Return to blog
                      span.finger.finger-left.finger-left-inward ☚
                  else
                    a(href='/archive/').related-link.related-centre-link
                      span.link-inner
                        span.finger.finger-right.finger-right-inward ☛
                        | Archive
                        span.finger.finger-left.finger-left-inward ☚
                li.related-item
                  if prevPage
                    a(href=prevPage.url).related-link.related-right-link
                      span.link-inner
                        | Newer entries
                        span.finger.finger-right ☛
    script(src=locals.url + '/js/main.js')
