doctype html
block vars
  - var bodyclass = null
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet', href=locals.url + '/css/main.css')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description)
  body(class=bodyclass)
    div.wrap
      header.header
        div.content-wrap
          block header
            div.logo
              h1
                a(href=locals.url)= locals.name
              p.description= locals.description
      main#content.content
        div.content-wrap
          block content
            h2 Greetings, earthlings!
      footer
        div.content-wrap
          block footer
    script(src=locals.url + '/js/main.js')
