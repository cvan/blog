block vars
  - bodyclass = "home"
  - prevPage = "1"
  - nextPage = "1"

extends layout

block content
  include author
  each article in articles
    article.article.intro
      p.date
        time= moment.utc(article.date).format('D MMMM YYYY')
      h2.article__heading
        a(href=article.url)= article.title
      section.content
        if article.intro.length
          | !{ typogr(article.intro).typogrify() }
        if article.hasMore
          p.more
            a(href=article.url) Read more
